.top-bar
  %ul.title-area
    %li.name
      %h1=link_to('Gameweb', root_path)
  %section.top-bar-section
    %ul.right
      -if current_user
        %li=link_to('Log out', destroy_user_session_path, :method => :delete)
        %li=link_to('Edit user', edit_user_registration_path)
      - else
        %li=link_to('Log in', new_user_session_path)
        %li=link_to('Sign up', new_user_registration_path)
%p#notice= notice

.row
  .large-9.columns
    %h4.right=@game.category.name
    %h2=@game.name
    -if current_user
      =link_to 'Edit', edit_game_path(@game)
    .row
      .large-2.columns
        Release date:
      .large-3.columns=@game.release_date
    %hr
      %p=@game.dscr
    %hr
      Comments:
  %aside.large-3.columns
    %h5 Games
    -@game.category.games.each do |game|
      %h6=link_to(game.name, game)
