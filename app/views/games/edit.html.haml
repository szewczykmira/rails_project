.top-bar
  %ul.title-area
    %li.name
      %h1=link_to('Gameweb', root_path)
  %section.top-bar-section
    %ul.right
      - if current_user.admin?
        %li=link_to @game.name, @game
        %li.active=link_to 'Admin', categories_path
        %li.divider
      %li=link_to('Log out', destroy_user_session_path, :method => :delete)
      %li=link_to('Edit user', edit_user_registration_path)
.row
  .large-6.large-centered.columns
    %h1 Editing game

.row
  .large-12.large-centered.columns
    - if current_user.admin?
      = render 'form'
    - else
      %h4 Only admin can edit games description!

