.top-bar
  %ul.title-area
    %li.name
      %h1=link_to('Gameweb', root_path)
  %section.top-bar-section
    %ul.right
      %li=link_to @comment.game.name, @comment.game, class:'active'
      -if current_user.admin?
        %li.active=link_to('Admin', categories_path)
      -if current_user
        %li=link_to('Log out', destroy_user_session_path, :method => :delete)
        %li=link_to('Edit user', edit_user_registration_path)
      - else
        %li=link_to('Log in', new_user_session_path)
        %li=link_to('Sign up', new_user_registration_path)
.row
  .large-6.large-centered.columns
    %h1 Editing comment
.row
  .large-12.large-centered.columns
    - if current_user.admin?
      = render 'form'
    - else
      %h4 You have no permission to be here
