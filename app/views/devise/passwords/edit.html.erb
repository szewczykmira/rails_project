<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1>
        <%= link_to 'Gameweb', root_path %>
      </h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
      <li class="active">
        <%= link_to 'Log in', new_user_session_path %>
      </li>
    </ul>
